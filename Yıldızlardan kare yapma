System.out.println("Lütfen kenar sayısını giriniz.");
		Scanner scan = new Scanner(System.in);
		int kenar=scan.nextInt();
		
		for (int i = 0; i <=kenar; i++) {
			
			if (i==0||i==kenar) {
				for (int j = 0; j <= kenar; j++) {
					System.out.print("* ");
				}
				System.out.println("");
			} 
			if (i>0&&i<kenar) {
				System.out.print("*");
				for (int k = 0; k <kenar*2-1; k++) {
				System.out.print(" ");	
				}
				System.out.println("*");
			
			}
			
			}
		scan.close();
